<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fitness.cs115.a115fitnessapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".meal_addFood"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".meal_createMeal"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".meal_editMeal"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".meal_overview"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".work_programList"
            android:label="Fitness Log"
            android:theme="@style/AppTheme" />

        <!-- Workout section activities -->
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".work_fitnessLog"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".work_createWorkout"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />



    </application>

</manifest>