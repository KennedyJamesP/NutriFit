<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="fitness.cs115.a115fitnessapp.MainActivity">

    <include layout="@layout/content_main"
        android:id="@+id/include" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <Button
        android:text="Nutrition Overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nutr_overview"
        android:layout_centerInParent="true"/>

    <Button
        android:text="Workout Overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/work_overview"
        android:layout_below="@id/nutr_overview"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
