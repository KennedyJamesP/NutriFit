<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_exerciseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="Exercise Name"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/et_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_exerciseName"
            android:ems="10"
            android:hint="Sets"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_sets"
            android:ems="10"
            android:hint="Reps per Set"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_startWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_reps"
            android:ems="10"
            android:hint="Starting Weight"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_incrWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_startWeight"
            android:ems="10"
            android:hint="Increment Weight"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_restTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_incrWeight"
            android:ems="10"
            android:hint="Rest Time"
            android:inputType="number" />


        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_restTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:imeOptions="actionDone"
            android:text="Confirm" />

    </RelativeLayout>
</ScrollView>
